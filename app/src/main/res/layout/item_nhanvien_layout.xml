<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2">
            <ImageView
                android:id="@+id/imageNV"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/admin"
                android:layout_width="200px"
                android:layout_height="200px"/>

        </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="0.8"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.8"
               android:weightSum="1"
               android:layout_margin="1dp"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/txtMaNV"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight=".31"
                   android:textColor="#ff0000"
                   android:text="4568"
                   android:gravity="center"
                   android:layout_marginRight="8dp"/>
               <TextView
                   android:id="@+id/txtTenNV"
                   android:layout_width="0dp"
                   android:text="Nguyễn Quang Duy Khải"
                   android:layout_height="wrap_content"
                   android:layout_weight=".69"
                   android:textColor="#1874CD"
                   android:textStyle="bold"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.8"
               android:weightSum="1"
               android:layout_margin="1dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight=".31"
                   android:textColor="#000000"
                   android:text="Phòng ban:"
                   android:layout_marginRight="8dp"/>
               <TextView
                   android:id="@+id/txtPB"
                   android:layout_width="0dp"
                   android:text="Kinh Doanh"
                   android:layout_height="wrap_content"
                   android:layout_weight=".69"
                   android:textColor="#1C1C1C"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.8"
               android:weightSum="1"
               android:layout_margin="1dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight=".31"
                   android:textColor="#000000"
                   android:text="Số điện thoại:"
                   android:layout_marginRight="8dp"/>
               <TextView
                   android:id="@+id/txtSdt"
                   android:layout_width="0dp"
                   android:text="0981904107"
                   android:layout_height="wrap_content"
                   android:layout_weight=".69"
                   android:textColor="#1C1C1C"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.8"
               android:weightSum="1"
               android:layout_margin="1dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight=".31"
                   android:textColor="#000000"
                   android:text="Lương cơ bản:"
                   android:layout_marginRight="8dp"/>
               <TextView
                   android:id="@+id/txtLuongCB"
                   android:layout_width="0dp"
                   android:text="1000000"
                   android:layout_height="wrap_content"
                   android:layout_weight=".69"
                   android:textColor="#1C1C1C"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.8"
               android:weightSum="1"
               android:layout_margin="1dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight=".31"
                   android:textColor="#000000"
                   android:text="Lương:"
                   android:layout_marginRight="8dp"/>
               <TextView
                   android:id="@+id/txtLuong"
                   android:layout_width="0dp"
                   android:text="25.200.000"
                   android:layout_height="wrap_content"
                   android:layout_weight=".69"
                   android:textColor="#1C1C1C"/>
           </LinearLayout>
       </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="#0000ff"/>

</LinearLayout>